<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@@FIT - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
</head>
<body>
    <header>
        <div class="container">
            <nav id="navbar-example" class="navbar navbar-default navbar-static" role="navigation">
                <div class="container-fluid height70">
                    <div class="navbar-header">
                        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-example-js-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/"><img src ="@Url.Content("~/Content/images/2.jpg")" /></a>
                    </div>
                    <div class="navbar-collapse bs-example-js-navbar-collapse collapse" style="height: 1px;">
                        <ul class="nav navbar-nav">
                            <li id="about-us-menu">
                                <a href="@Url.Action("Index", "AboutUs")" role="button">ABOUT US</a>
                            </li>
                            <!--<li id="staff-menu">
                                <a href="@Url.Action("Index", "Staff")" role="button">STAFF</a>
                            </li>-->
                            <li id="facility-menu">
                                <a href="@Url.Action("Index", "Facility")" role="button">WHAT WE DO</a>
                            </li>
                            <!--<li id="programme-menu">
                                <a href="@Url.Action("Index", "Programme")" role="button">PROGRAMME</a>
                            </li>-->
                            <li id="refer-menu">
                                <a href="@Url.Action("Index", "Refer")" role="button">REFER A FRIEND</a>
                            </li>
                            <li id="contact-us-menu">
                                <a href="@Url.Action("Index", "ContactUs")" role="button">CONTACT US</a>
                            </li>
                            <li id="faq-menu">
                                <a href="@Url.Action("Index", "FAQ")" role="button">FAQ</a>
                            </li>
                        </ul>
                    </div><!-- /.nav-collapse -->
                </div><!-- /.container-fluid -->
            </nav> <!-- /navbar-example -->
        </div>
    </header>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Opening Hours</h3>
                    <p>
                        Mon - Fri 6:00am - 9:00pm<br />
                        Sat 7:00am - 3:00pm<br />
                        Sun By Appointment Only
                    </p>
                </div>
                <div class="col-md-6">
                    <h3>Contact Us</h3>
                    <div>
                        <div class="col-sm-2">
                            <span class="glyphicon glyphicon-home"></span><br />
                        </div>
                        <div class="col-sm-10">
                            A4/35 Greenmount Drive<br />
                            East Tamaki<br />
                            Auckland 2013<br />
                        </div>
                        <div class="col-sm-2">
                            <span class="glyphicon glyphicon-earphone"></span><br /></div>
                        <div class="col-sm-10">
                            +64 9 909 6619<br />
                            +64 22 GO AT FIT
                        </div>
                        <div class="col-sm-2">
                            <span class="glyphicon glyphicon-envelope"></span><br />
                        </div>
                        <div class="col-sm-10">
                            hello@@atfit.co.nz
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
