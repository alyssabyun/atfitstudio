    ViewBag.Title = "AboutUs";
}

<div class="container btsp-border">
    <h2>About Us</h2>
    <hr />
    <div class="full-size-image">
        <img src="@Url.Content("~/Content/images/aboutus2.jpg")" />
    </div>

    <div class="row big-row">
        <p>@@FIT` Mission is We are a small friendly studio, changing our @@FIT family live everyday – helping our @@FIT family achieve MASSIVE RESULTS and long term success in quality of life and lifestyle.</p>
    </div>
    <div class="row big-row">
        <p>@@FIT is smaller, more personal and able to give individual time and input to each of our @@FIT family. Train on your own, train in a small group or train one on one with one of our trainers.</p>
    </div>
    <div class="row big-row">
        <p>@@FIT has designed the type of place where people feel empowered to exercise, without feeling intimidated. If you traditionally have been turned off by big gyms then DO NOT WORRY! We are here!</p>
    </div>
</div>


